<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.cafeapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.CafeApp">
        <activity android:name=".AllOrdersActivity"
            android:parentActivityName=".MainActivity">
        </activity>

        <activity android:name=".OrderDetailsActivity"
            android:parentActivityName=".MainActivity">
        </activity>

        <activity android:name=".OrderingCoffeeActivity"
            android:parentActivityName=".MainActivity">
        </activity>

        <activity android:name=".OrderingDonutsActivity"
            android:parentActivityName=".MainActivity">
        </activity>

        <activity
            android:name=".MainActivity"
            android:label="Cafe Application Project 5"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>